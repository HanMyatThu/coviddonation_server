  body
    // Loader
    #preloader
      #status
        .spinner Loading...
    .header
        a#menu-action(href='#')
            i.fa.fa-bars
            span Close
        .logo
            | Admin DashBoard 
            i.fas.fa-home
        
    .sidebar    
        ul
            li
                a(href='/admin/dashboard')
                    i.fas.fa-home
                    span Dashboard
            li
                a(href='/admin/qrcode')
                    i.fas.fa-qrcode
                    span Qrcodes
            li
                a(href='/admin/qrlist')
                    i.fas.fa-qrcode
                    span Activated QR List
            li
                a(href='/admin/process')
                    i.fas.fa-server
                    span Processes
            li
                a(href='/admin/codes')
                    i.fas.fa-file
                    span Access Codes
            li
                a(href='/admin/machines')
                    i.fas.fa-truck
                    span Machine
            li
                a(href='/admin/users')
                    i.fas.fa-users
                    span Users
            li
                a(href='/admin/requests')
                    i.fas.fa-comment-dots
                    span Requests
            li
                a(href='/admin/logs')
                    i.fas.fa-sms
                    span SMS Logs
            li
                a(href='/admin/settings')
                    i.fas.fa-tools
                    span Setting
            li#LogoutRoute
                a(href='')
                    i.fas.fa-key
                    span Logout
    .main
        block content

  include ./utils/error
  include ./utils/success
  
