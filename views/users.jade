extends layout

block content
    link(rel="stylesheet", href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css")
    link(rel="stylesheet", href="/plugins/css/buttons-datatable.min.css")
    link(rel="stylesheet", href="/plugins/css/bootstrap-calender.min.css")

    section#section.bg_fade
        .container
            .row.mt-2.mb-2
                .col-md-12.text-center
                    h4 Users
             .row.mt-3.mb-3
                .col-md-4.mb-2
                    label(for="#filterSelector") Choose Filter
                    select#filterSelector.form-control(placeholder="Choose Filter")
                        option(value='qruser' selected) Qr Users
             
            .row.mt-3.mb-3
                .col-md-12.text-left
                    button#filterBtn.btn.btn-primary Search
            .row(style="margin-top:50px;")
                .col-md-12.col-sm-12
                    table#userTable.table.table-striped.table-bordered.table-hovered.table-responsive(style='width:100%; font-size: 14px;')
                        thead
                            th
                            th User ID
                            th Approved    
                            th Name
                            th Address
                            th Township & City
                            th Phone
                            th Number of Family
                            th QR-User?
                            th Delete
                        tbody 
                        
            //User Delete Modal
            #userDeleteModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='userDeleteModalTitle', aria-hidden='true')
                .modal-dialog.modal-dialog-centered(role='document')
                    .modal-content
                        .modal-header.bg-danger.text-center
                            h5#userDeleteModalTitle.modal-title(style="color:white") Are you sure you want to delete user?
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') Ã—
                        .modal-body
                            form#userDelForm
                                .form-group.mt-3
                                    label.form-label(for='confirmDel') Enter confirm to delete user.
                                    input#confirmDel.form-control(type="text",name="confirmDel",required='',placeholder='confirm')
                                .form-group.text-right
                                    button.btn.btn-primary(type='submit') Save
    include ./utils/footer
    script(src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" type='text/javascript')
    script(src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" type="text/javascript")
    script(src="https://cdn.datatables.net/select/1.3.1/js/dataTables.select.min.js" type="text/javascript") 
    script(src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js" type="text/javascript")
    script(src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js" type="text/javascript")
    script(src="/plugins/js/moment.js")
    script(src="/js/admins/users.js")
    